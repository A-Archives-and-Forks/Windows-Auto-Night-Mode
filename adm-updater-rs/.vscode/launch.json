{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": ["rust"],
            "name": "Debug executable 'adm-updater-rs'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=adm-updater-rs",
                    "--package=adm-updater-rs"
                ],
                "filter": {
                    "name": "adm-updater-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "lldb",
            "request": "launch",
            "sourceLanguages": ["rust"],
            "name": "Debug unit tests in executable 'adm-updater-rs'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=adm-updater-rs",
                    "--package=adm-updater-rs"
                ],
                "filter": {
                    "name": "adm-updater-rs",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
        },
            {
            "name": "Debug Rust",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/target/debug/adm-updater-rs.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal",
            "symbolSearchPath": "https://msdl.microsoft.com/download/symbols",
            "preLaunchTask": "${defaultBuildTask}",
            "args": []
        }
    ]
}
