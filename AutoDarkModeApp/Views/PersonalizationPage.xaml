<Page
    x:Class="AutoDarkModeApp.Views.PersonalizationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AutoDarkModeApp.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid x:Name="ContentArea" Margin="{StaticResource NavigationViewPageContentMargin}">
            <StackPanel Style="{StaticResource PageBaseStackPanelStyle}">

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=PersonalizationPageManagedMode}" />
                <InfoBar
                    IsClosable="False"
                    IsOpen="{x:Bind ViewModel.ThemeSwitchEnabled, Mode=OneWay}"
                    Message="{helpers:ResourceString Name=tbFeatureDisabledWhileThemeMode}"
                    Severity="Informational">
                    <InfoBar.ActionButton>
                        <Button Command="{x:Bind ViewModel.ThemeSwitchDisabledCommand}" Content="Disable Windows manages your theme" />
                    </InfoBar.ActionButton>
                </InfoBar>
                <controls:SettingsCard
                    Click="PickWallpaperSettingsCard_Click"
                    Description="{helpers:ResourceString Name=tbPickWallpaper}"
                    Header="{helpers:ResourceString Name=lblPickWallpaper}"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE91B;}"
                    IsClickEnabled="True"
                    IsEnabled="{x:Bind ViewModel.ManagedModeSettingsCardEnabled, Mode=OneWay}" />
                <controls:SettingsCard
                    Click="ColorizationPickSettingsCard_Click"
                    Description="{helpers:ResourceString Name=ColorizationTextBlockDescription}"
                    Header="{helpers:ResourceString Name=ColorizationPick}"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE790;}"
                    IsClickEnabled="True"
                    IsEnabled="{x:Bind ViewModel.ManagedModeSettingsCardEnabled, Mode=OneWay}" />
                <controls:SettingsCard
                    Click="CursorsSettingsCard_Click"
                    Description="{helpers:ResourceString Name=PersonalizationPageCursorDescription}"
                    Header="{helpers:ResourceString Name=PersonalizationPageCursorTitle}"
                    HeaderIcon="{ui:FontIcon Glyph=&#xE8B0;}"
                    IsClickEnabled="True"
                    IsEnabled="{x:Bind ViewModel.ManagedModeSettingsCardEnabled, Mode=OneWay}" />

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=PersonalizationPageUnmanagedMode}" />
                <InfoBar
                    IsClosable="False"
                    IsOpen="{x:Bind ViewModel.ThemeSwitchDisabled, Mode=OneWay}"
                    Message="{helpers:ResourceString Name=tbFeatureDisabledWhileManagedMode}"
                    Severity="Informational" />
                <controls:SettingsCard
                    Click="ThemePickerSettingsCard_Click"
                    Description="{helpers:ResourceString Name=tbPickTheme}"
                    Header="{helpers:ResourceString Name=lblPickTheme}"
                    HeaderIcon="{ui:FontIcon Glyph=&#xe771;}"
                    IsClickEnabled="True"
                    IsEnabled="{x:Bind ViewModel.UnmanagedModeSettingsCardEnabled, Mode=OneWay}" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
