<Page
    x:Class="AutoDarkModeApp.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AutoDarkModeApp.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid x:Name="ContentArea" Margin="{StaticResource NavigationViewPageContentMargin}">
            <StackPanel Style="{StaticResource PageBaseStackPanelStyle}">

                <!--  Logo  -->
                <StackPanel Orientation="Horizontal" Spacing="32">
                    <Image
                        Width="64"
                        Height="64"
                        PointerPressed="LogoImage_PointerPressed"
                        Source="/Assets/AutoDarkModeIcon.ico" />
                    <StackPanel Orientation="Vertical" Spacing="8">
                        <TextBlock
                            x:Name="AppNameTextBlock"
                            Style="{StaticResource TitleTextBlockStyle}"
                            Text="Auto Dark Mode X" />
                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}" Text="© 2024 Armin Osaj &amp; Samuel Schiegg" />
                    </StackPanel>
                </StackPanel>

                <!--  Version information  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=NavbarAbout}" />
                <controls:SettingsExpander
                    Header="{helpers:ResourceString Name=AboutTextBlockVersion}"
                    HeaderIcon="{ui:FontIcon Glyph=&#xe946;}"
                    IsExpanded="True">
                    <Button
                        x:Name="CopyVersionInfoButton"
                        Click="CopyVersionInfoButoon_Click"
                        Content="{helpers:ResourceString Name=AboutButtonCopy}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard ContentAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="20">
                                <StackPanel Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="Commit" />
                                    <TextBlock Text="App/Service" />
                                    <TextBlock Text="Updater" />
                                    <TextBlock Text="Shell" />
                                    <TextBlock Text=".Net" />
                                    <TextBlock Text="Windows" />
                                    <TextBlock Text="Arch" />
                                </StackPanel>
                                <StackPanel Orientation="Vertical" Spacing="8">
                                    <TextBlock Text="{x:Bind ViewModel.CommitHashText, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind ViewModel.SvcVersionText, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind ViewModel.UpdaterVersionText, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind ViewModel.ShellVersionText, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind ViewModel.DotNetVersionText, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind ViewModel.WindowsVersionText, Mode=OneWay}" />
                                    <TextBlock Text="{x:Bind ViewModel.ArchText, Mode=OneWay}" />
                                </StackPanel>
                            </StackPanel>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <!--  CopyVersionInfoButton TeachingTip  -->
                <TeachingTip
                    x:Name="CopyButtonTeachingTip"
                    Title="{helpers:ResourceString Name=AboutButtonCopy}"
                    Subtitle="{helpers:ResourceString Name=AboutVersionInfoCopied}"
                    Target="{x:Bind CopyVersionInfoButton}">
                    <TeachingTip.IconSource>
                        <FontIconSource Glyph="&#xE930;" />
                    </TeachingTip.IconSource>
                </TeachingTip>

                <!--  TODO: fill in Click or NavigateUri  -->
                <!--  Log and Shell  -->
                <controls:SettingsCard ContentAlignment="Left">
                    <StackPanel Spacing="8">
                        <HyperlinkButton Click="OpenLogHyperlinkButton_Click" Content="{helpers:ResourceString Name=ConfigHyperLinkOpenLog}" />
                        <HyperlinkButton Click="OpenUpdaterLogHyperlinkButton_Click" Content="{helpers:ResourceString Name=AboutHyperLinkOpenUpdaterLog}" />
                        <HyperlinkButton Click="OpenShellHyperlinkButton_Click" Content="{helpers:ResourceString Name=AboutHyperLinkOpenShell}" />
                    </StackPanel>
                </controls:SettingsCard>

                <!--  SpecialThanks  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=SpecialThanks}" />
                <controls:SettingsCard ContentAlignment="Left">
                    <HyperlinkButton NavigateUri="https://github.com/namazso" ToolTipService.ToolTip="https://github.com/namazso">namaszo</HyperlinkButton>
                </controls:SettingsCard>

                <!--  Follow us  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=AboutTextBlockFollowUs}" />
                <controls:SettingsCard ContentAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <HyperlinkButton NavigateUri="https://github.com/AutoDarkMode/Windows-Auto-Night-Mode" ToolTipService.ToolTip="https://github.com/AutoDarkMode/Windows-Auto-Night-Mode">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontFamily="/Assets/AutoDarkModeIconFont.ttf#icomoon"
                                    FontSize="24"
                                    Glyph="&#xE902;" />
                                <TextBlock VerticalAlignment="Center" Text="GitHub" />
                            </StackPanel>
                        </HyperlinkButton>

                        <HyperlinkButton NavigateUri="https://t.me/autodarkmode" ToolTipService.ToolTip="https://t.me/autodarkmode">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon
                                    FontFamily="/Assets/AutoDarkModeIconFont.ttf#icomoon"
                                    FontSize="24"
                                    Foreground="#26A5E4"
                                    Glyph="&#xE901;" />
                                <TextBlock VerticalAlignment="Center" Text="Telegram" />
                            </StackPanel>
                        </HyperlinkButton>
                    </StackPanel>
                </controls:SettingsCard>

                <!--  Third Party  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{helpers:ResourceString Name=lblThirdParty}" />
                <controls:SettingsCard ContentAlignment="Left">
                    <HyperlinkButton NavigateUri="https://github.com/microsoft/WindowsAppSDK" ToolTipService.ToolTip="https://github.com/microsoft/WindowsAppSDK">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <!--  icon  -->
                            <TextBlock Text="WinUI" />
                        </StackPanel>
                    </HyperlinkButton>
                </controls:SettingsCard>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
