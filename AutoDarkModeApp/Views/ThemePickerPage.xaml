<Page
    x:Class="AutoDarkModeApp.Views.ThemePickerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:AutoDarkModeApp.Helpers"
    xmlns:lib="using:AutoDarkModeLib.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    mc:Ignorable="d">

    <ScrollViewer>
        <Grid x:Name="ContentArea" Margin="{StaticResource NavigationViewPageContentMargin}">
            <StackPanel Style="{StaticResource PageBaseStackPanelStyle}">

                <!--  Theme  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lib:ResourceString Name=Theme}" />
                <controls:SettingsExpander
                    Header="{lib:ResourceString Name=SwichWindowsTheme}"
                    HeaderIcon="{ui:FontIcon Glyph=&#xe771;}"
                    IsExpanded="True">
                    <ToggleSwitch IsOn="{x:Bind ViewModel.ThemeSwitchEnabled, Mode=TwoWay}" />
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard ContentAlignment="Left">
                            <CheckBox Content="{lib:ResourceString Name=RestoreThemeChanged}" IsChecked="{x:Bind ViewModel.ThemeKeepActiveEnabled, Mode=TwoWay}" />
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                </controls:SettingsExpander>

                <!--  Theme Tutorial Step  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lib:ResourceString Name=CreateTheme}" />
                <InfoBar
                    x:Name="ThemeTutorialFirstStepInfoBar"
                    IsClosable="False"
                    IsOpen="True"
                    Message="{lib:ResourceString Name=ThemeTutorialStep2_Content}">
                    <InfoBar.ActionButton>
                        <HyperlinkButton Click="OpenWindowsThemePageHyperlinkButton_Click" Content="{lib:ResourceString Name=ThemeTutorialStep1_Content}" />
                    </InfoBar.ActionButton>
                </InfoBar>
                <InfoBar
                    x:Name="ThemeTutorialSecondStepInfoBar"
                    IsClosable="False"
                    IsOpen="True"
                    Message="{lib:ResourceString Name=ThemeTutorialStep3_Content}" />
                <InfoBar
                    x:Name="ThemeTutorialThirdStepInfoBar"
                    IsClosable="False"
                    IsOpen="True"
                    Message="{lib:ResourceString Name=ThemeTutorialStep4_Content}" />

                <!--  Pick Theme  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lib:ResourceString Name=PickTheme}" />
                <controls:SettingsCard Header="{lib:ResourceString Name=LightTheme}" HeaderIcon="{ui:FontIcon Glyph=&#xE706;}">
                    <ComboBox
                        x:Name="LightThemeComboBox"
                        MinWidth="120"
                        SelectedItem="{x:Bind ViewModel.SelectedLightTheme, Mode=TwoWay}" />
                </controls:SettingsCard>
                <controls:SettingsCard Header="{lib:ResourceString Name=DarkTheme}" HeaderIcon="{ui:FontIcon Glyph=&#xE708;}">
                    <ComboBox
                        x:Name="DarkThemeComboBox"
                        MinWidth="120"
                        SelectedItem="{x:Bind ViewModel.SelectedDarkTheme, Mode=TwoWay}" />
                </controls:SettingsCard>

                <controls:SettingsCard
                    ActionIcon="{ui:FontIcon Glyph=&#xE838;}"
                    Click="OpenThemeFolderSettingsCard_Click"
                    Header="{lib:ResourceString Name=OpenPath}"
                    IsClickEnabled="True" />

                <!--  Ignore  -->
                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="{lib:ResourceString Name=IgnoreSettings}" />
                <InfoBar
                    IsClosable="False"
                    IsOpen="True"
                    Message="{lib:ResourceString Name=Msg_IgnoreDisabled}"
                    Severity="Warning" />
                <controls:SettingsCard ContentAlignment="Left">
                    <CheckBox Content="{lib:ResourceString Name=IgnoreBackground}" IsChecked="{x:Bind ViewModel.IgnoreBackgroundEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>
                <controls:SettingsCard ContentAlignment="Left">
                    <CheckBox Content="{lib:ResourceString Name=IgnoreCursor}" IsChecked="{x:Bind ViewModel.IgnoreCursorEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>
                <controls:SettingsCard ContentAlignment="Left">
                    <CheckBox Content="{lib:ResourceString Name=IgnoreSound}" IsChecked="{x:Bind ViewModel.IgnoreSoundEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>
                <controls:SettingsCard ContentAlignment="Left">
                    <CheckBox Content="{lib:ResourceString Name=IgnoreDesktopIcons}" IsChecked="{x:Bind ViewModel.IgnoreDesktopIconsEnabled, Mode=TwoWay}" />
                </controls:SettingsCard>

            </StackPanel>
        </Grid>
    </ScrollViewer>

</Page>
