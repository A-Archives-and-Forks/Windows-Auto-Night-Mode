<fw:AcrylicWindow x:Name="BGuiWindow" x:Class="AutoThemeChanger.DesktopBGui" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoThemeChanger"
        xmlns:p="clr-namespace:AutoThemeChanger.Properties"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="{x:Static p:Resources.dbTitle}" Height="353" MinWidth="640" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="Resources/Photo_Icon.png" Background="{x:Null}" fw:AcrylicWindowStyle="NoIcon" SizeToContent="Width" fw:PointerTracker.Enabled="True">
    <Grid x:Name="WallpaperGrid" Background="#40FFFFFF">
        <!-- Grid Layout -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Pick File Light -->
        <TextBlock Grid.ColumnSpan="1" Grid.Column="0" HorizontalAlignment="Left" Margin="12,17,0,0" TextWrapping="Wrap" Text="&#xE706;" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" FontSize="23" RenderTransformOrigin="0.673,0.524"/>
        <TextBlock Grid.ColumnSpan="3" Grid.Column="0" HorizontalAlignment="Left" Margin="42,15,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.dbLight}" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
        <Button Grid.Column="0" x:Name="FilePicker1" Content="{x:Static p:Resources.dbFilePicker}" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" Click="FilePicker1_Click" CommandParameter="FilePicker1" MinWidth="85" Height="24" Width="Auto" Style="{StaticResource ButtonRevealStyle}" />
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.or}" VerticalAlignment="Top" Width="Auto" TextAlignment="Center"/>
        <Button Grid.Column="2" x:Name="GetCurrentBG1" Content="{x:Static p:Resources.dbUseCurrent}" HorizontalAlignment="Left" Margin="5,54,0,0" VerticalAlignment="Top" Click="GetCurrentBG1_Click" CommandParameter="GetCurrentBG1" Width="Auto" Height="24" MinWidth="150" Style="{StaticResource ButtonRevealStyle}"/>

        <!-- Pick File Dark -->
        <TextBlock Grid.Column="4" HorizontalAlignment="Left" Margin="2,17,0,0" TextWrapping="Wrap" Text="&#xE708;" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" FontSize="20"/>
        <TextBlock Grid.ColumnSpan="3" Grid.Column="4" HorizontalAlignment="Left" Margin="30,15,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.dbDark}" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button Grid.Column="4" x:Name="FilePicker2" Content="{x:Static p:Resources.dbFilePicker}" HorizontalAlignment="Left" Margin="0,54,0,0" VerticalAlignment="Top" Click="FilePicker1_Click" CommandParameter="FilePicker2" MinWidth="85" Width="Auto" Height="24" Style="{StaticResource ButtonRevealStyle}"/>
        <TextBlock Grid.Column="5" HorizontalAlignment="Left" Margin="10,56,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.or}" VerticalAlignment="Top" Width="Auto" TextAlignment="Center"/>
        <Button Grid.Column="6" x:Name="GetCurrentBG2" Content="{x:Static p:Resources.dbUseCurrent}" HorizontalAlignment="Left" Margin="5,54,0,0" VerticalAlignment="Top" Click="GetCurrentBG1_Click" CommandParameter="GetCurrentBG2" Width="Auto" Height="24" MinWidth="150" Style="{StaticResource ButtonRevealStyle}"/>


        <!-- Window Buttons -->
        <StackPanel Grid.ColumnSpan="5" Grid.Column="2" Orientation="Horizontal" Margin="0,280,0,10" HorizontalAlignment="Right" Width="Auto">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="0,0,10,0"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="DeleButton" Content="{x:Static p:Resources.dbDel}" Click="DeleButton_Click" HorizontalAlignment="Left" MinWidth="120" Width="Auto" Height="24" Style="{StaticResource ButtonRevealStyle}" Margin="0,0,10,0"/>
            <Button x:Name="SaveButton1" Content="{x:Static p:Resources.save}" ToolTipService.ShowOnDisabled="True" Click="SaveButton1_Click" HorizontalAlignment="Center" MinWidth="90" Width="Auto" Height="24" Style="{StaticResource ButtonAccentRevealStyle}" Margin="0,0,10,0"/>
            <Button x:Name="CancelButton" Content="{x:Static p:Resources.cancel}" Click="CancelButton_Click" HorizontalAlignment="Right" MinWidth="90" Width="Auto" Height="24" Style="{StaticResource ButtonRevealStyle}" Margin="0,0,0,0"/>
        </StackPanel>

        <!-- Misc -->
        <Separator Grid.Column="3" HorizontalAlignment="Left" Height="50" Margin="0,15,0,0" VerticalAlignment="Top" Width="247" RenderTransformOrigin="0.5,0.5">
            <Separator.LayoutTransform>
                <RotateTransform Angle="90" />
            </Separator.LayoutTransform>
        </Separator>
        <Border Grid.ColumnSpan="3" Grid.Column="4" BorderBrush="{DynamicResource SystemBaseHighColorBrush}" BorderThickness="1" HorizontalAlignment="Left" Height="170" Margin="0,90,0,0" VerticalAlignment="Top" Width="283">
            <StackPanel>
                <TextBlock x:Name="PictureText2" Margin="0,70,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.dbSelectImage}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <Image x:Name="Thumb2" HorizontalAlignment="Left" Height="170" Margin="0,-87,-2,0" Width="283" Stretch="Fill" VerticalAlignment="Top"/>
            </StackPanel>
        </Border>
        <Border Grid.ColumnSpan="3" Grid.Column="0" BorderBrush="{DynamicResource SystemBaseHighColorBrush}" BorderThickness="1" HorizontalAlignment="Left" Height="170" Margin="10,90,0,0" VerticalAlignment="Top" Width="283">
            <StackPanel HorizontalAlignment="Left">
                <TextBlock x:Name="PictureText1" HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="{x:Static p:Resources.dbSelectImage}" VerticalAlignment="Top"/>
                <Image x:Name="Thumb1" HorizontalAlignment="Left" Height="170" Margin="0,-87,0,0" VerticalAlignment="Top" Width="283" Stretch="Fill"/>
            </StackPanel>
        </Border>
    </Grid>
</fw:AcrylicWindow>
