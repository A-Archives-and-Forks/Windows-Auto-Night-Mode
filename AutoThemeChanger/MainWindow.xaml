<Window x:Class="AutoThemeChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoThemeChanger"
        mc:Ignorable="d"
        Title="Windows Auto-Night Mode" Height="419.933" Width="275.332" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid x:Name="mainWin">
        <Button x:Name="applyButton" Content="Apply" HorizontalAlignment="Left" Margin="161,243,0,0" VerticalAlignment="Top" Width="75" Click="ApplyButton_Click" IsEnabled="False" Height="23"/>
        <TextBox x:Name="darkStartBox" HorizontalAlignment="Left" Height="23" Margin="86,243,0,0" TextWrapping="Wrap" Text="19" VerticalAlignment="Top" Width="53" PreviewTextInput="DarkStartBox_PreviewTextInput" CommandManager.PreviewExecuted="DarkStartBox_PreviewExecuted" MinLines="1" MaxLength="2" ContextMenu="{x:Null}"/>
        <TextBox x:Name="lightStartBox" HorizontalAlignment="Left" Height="23" Margin="10,243,0,0" TextWrapping="Wrap" Text="7" VerticalAlignment="Top" Width="48" PreviewTextInput="LightStartBox_PreviewTextInput" CommandManager.PreviewExecuted="LightStartBox_PreviewExecuted" MinLines="1" MaxLength="2" ContextMenu="{x:Null}"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,202,0,0" TextWrapping="Wrap" Text="Choose custom start time..." VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,227,0,0" TextWrapping="Wrap" Text="Light" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="86,227,0,0" TextWrapping="Wrap" Text="Dark" VerticalAlignment="Top"/>
        <TextBlock x:Name="userFeedback" HorizontalAlignment="Left" Margin="10,316,0,0" TextWrapping="Wrap" Text="Welcome" VerticalAlignment="Top"/>
        <Button x:Name="aboutButton" Content="?" HorizontalAlignment="Left" Margin="221,349,0,0" VerticalAlignment="Top" Width="15" Click="AboutButton_Click"/>
        <CheckBox x:Name="locationCheckBox" Content="Use Location Service" HorizontalAlignment="Left" Margin="10,271,0,0" VerticalAlignment="Top" Checked="LocationCheckBox_Checked" Unchecked="LocationCheckBox_Unchecked"/>
        <TextBlock x:Name="locationBlock" HorizontalAlignment="Left" Margin="10,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="53,55,0,0" VerticalAlignment="Top" Width="171" Name ="AppComboBox" DropDownClosed="AppComboBox_DropDownClosed">
            <ComboBoxItem IsSelected="True">Adjust to theme</ComboBoxItem>
            <ComboBoxItem>Always white</ComboBoxItem>
            <ComboBoxItem>Always dark</ComboBoxItem>
        </ComboBox>
        <Label Content="Apps:" HorizontalAlignment="Left" Margin="53,30,0,0" VerticalAlignment="Top"/>
        <Label Content="System:" HorizontalAlignment="Left" Margin="53,82,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="53,108,0,0" VerticalAlignment="Top" Width="171" Name="SystemComboBox" DropDownClosed="SystemComboBox_DropDownClosed">
            <ComboBoxItem IsSelected="True">Adjust to theme</ComboBoxItem>
            <ComboBoxItem>Always white</ComboBoxItem>
            <ComboBoxItem>Always dark</ComboBoxItem>
        </ComboBox>
        <ComboBox HorizontalAlignment="Left" Margin="53,161,0,0" VerticalAlignment="Top" Width="171" Name="EdgeComboBox" DropDownClosed="EdgeComboBox_DropDownClosed">
            <ComboBoxItem IsSelected="True">Adjust to theme</ComboBoxItem>
            <ComboBoxItem>Always white</ComboBoxItem>
            <ComboBoxItem>Always dark</ComboBoxItem>
        </ComboBox>
        <Label Content="Edge:" HorizontalAlignment="Left" Margin="54,135,0,0" VerticalAlignment="Top"/>
        <Label Content="&#xE71D;" HorizontalAlignment="Left" Margin="10,42,0,0" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" FontSize="25"/>
        <Label Content="&#xE977;" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" FontSize="25"/>
        <Label Content="&#xE701;" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" FontFamily="Segoe MDL2 Assets" FontSize="25"/>
        <CheckBox Content="Enable automatic theme switching" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Name="autoCheckBox" Checked="AutoCheckBox_Checked" Unchecked="AutoCheckBox_Unchecked"/>
    </Grid>
</Window>
