<Window x:Name="AboutWindowXAML" x:Class="AutoThemeChanger.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoThemeChanger"
        mc:Ignorable="d"
        Title="About" Height="336.735" Width="269.193" ResizeMode="NoResize" Icon="Resources/AboutIcon.ico" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Auto-Night Mode Version 2.0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16" Height="21" Width="222"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Author: Armin Osaj © 2019" VerticalAlignment="Top" Height="16" Width="144"/>
        <Button x:Name="updateButton" Content="Check for updates" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="109" Click="UpdateButton_Click" Height="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,183,0,0" TextWrapping="Wrap" Text="Used third party software" VerticalAlignment="Top" FontWeight="Bold" FontSize="14" Height="19" Width="172"/>
        <Button x:Name="taskShedulerLicense" Content="TaskScheduler" HorizontalAlignment="Left" Margin="10,207,0,0" VerticalAlignment="Top" Width="93" Click="TaskShedulerLicense_Click" Height="20"/>
        <TextBlock x:Name="updateInfoText" HorizontalAlignment="Left" Margin="10,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="we check at every program start for updates."/>
        <TextBlock HorizontalAlignment="Left" Margin="10,108,0,0" TextWrapping="Wrap" Text="Updates" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBlock x:Name="GitHubTextBlock" HorizontalAlignment="Left" Margin="52,71,0,0" TextWrapping="Wrap" Text="GitHub" VerticalAlignment="Top" MouseEnter="GitHubTextBlock_MouseEnter" MouseLeave="GitHubTextBlock_MouseLeave" MouseLeftButtonDown="GitHubTextBlock_MouseLeftButtonDown"/>
        <Image HorizontalAlignment="Left" Height="36" Margin="10,59,0,0" VerticalAlignment="Top" Width="37" Source="Resources/GitHub_Logo_Black.png"/>
        <Image HorizontalAlignment="Left" Height="59" Margin="90,49,0,0" VerticalAlignment="Top" Width="79" Source="Resources/Twitter_Logo_Blue.png"/>
        <TextBlock x:Name="TwitterTextBlock" HorizontalAlignment="Left" Margin="141,71,0,0" TextWrapping="Wrap" Text="Twitter" VerticalAlignment="Top" MouseEnter="TwitterTextBlock_MouseEnter" MouseLeave="TwitterTextBlock_MouseLeave" MouseLeftButtonDown="TwitterTextBlock_MouseLeftButtonDown"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,240,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <CheckBox x:Name="debugModeCheckBox" Content="Enable features for Windows 1903" HorizontalAlignment="Left" Margin="9,264,0,0" VerticalAlignment="Top" Checked="DebugModeCheckBox_Checked" Unchecked="DebugModeCheckBox_Unchecked"/>
    </Grid>
</Window>
